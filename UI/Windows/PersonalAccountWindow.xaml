<Window x:Class="UI.Windows.PersonalAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Windows"
        mc:Ignorable="d"
        Title="Personal Account" Height="450" Width="860"
        Background="LightGray">
    <Window.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Логин:" FontWeight="Bold"/>
            <TextBlock Text="sjdkf" Margin="0,5" FontSize="14"/>
            <Border Height="1" Background="DarkGray" />

            <TextBlock Text="Пароль:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock Text="********" Margin="0,5" FontSize="14"/>
            <Border Height="1" Background="DarkGray"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Имя Пользователя:" FontWeight="Bold"/>
            <TextBlock Text="fff" Width="250" Margin="0,6"/>
            <Border Height="1" Background="DarkGray"/>

            <TextBlock Text="Основной цвет:" FontWeight="Bold" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal">
                <Rectangle Width="20" Height="20" Fill="DarkBlue" Margin="0,5,5,0" MouseDown="Rectangle_MouseDown"/>
            </StackPanel>
            <Border Height="1" Background="DarkGray" Margin="0,6"/>

            <TextBlock Text="Дополнительный цвет:" FontWeight="Bold" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal">
                <Rectangle Width="20" Height="20" Fill="GreenYellow" Margin="0,5,5,0" MouseDown="Rectangle_MouseDown"/>
            </StackPanel>
            <Border Height="1" Background="DarkGray" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Margin="10">
        </StackPanel>
    </Grid>
</Window>