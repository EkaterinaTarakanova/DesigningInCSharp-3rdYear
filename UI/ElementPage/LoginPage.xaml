<Page x:Class="UI.ElementPage.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.ElementPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Имя пользователя:"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
            <Button Content="Войти" Style="{StaticResource RoundButtonStyle}" Width="150" HorizontalAlignment="Center" Click="LoginButton_Click"/>
            <Button Content="Зарегистрироваться" Style="{StaticResource RoundButtonStyle}" Width="150" HorizontalAlignment="Center" Margin="0,10,0,0" Click="OpenRegisterWindow_Click"/>
        </StackPanel>
    </Grid>
</Page>
