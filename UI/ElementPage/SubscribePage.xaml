<Page x:Class="UI.ElementPage.SubscribePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.ElementPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SubscribePage">

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.ColumnSpan="3" Grid.RowSpan="4" Opacity="0.3" Background="Gray"/>
        
        <Grid Grid.Column="1" Grid.Row="1">
            <Button x:Name="AcceptButton" Content="Принять" Width="75" Height="25" Background="Green" Click="Accept_Click" Style="{StaticResource RoundButtonStyle}" HorizontalAlignment="Left" Margin="5"/>
            <Button x:Name="CanelButton" Content="Отмена" Width="75" Height="25" Background="Red" Click="Canel_Click" Style="{StaticResource RoundButtonStyle}" HorizontalAlignment="Right" Margin="5"/>
        </Grid>
        <Frame x:Name="CalendarFrame" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Page>
